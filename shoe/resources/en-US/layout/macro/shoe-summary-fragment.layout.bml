<layout-macro-def id="shoe-summary-fragment">
  <params>
    <param name="shoe" type="Shoe" max="One" min="Required"/>
  </params>
  <content>
    <layout-macro id="common:card">
      <title>{{shoe.name}}</title>
      <titleSize>medium</titleSize>
      <bodyText>{{shoe.price}}</bodyText>
      <image>{{shoe.photo.images[0].url}}</image>
      <imageType>background</imageType>
      <aspectRatio>4_3</aspectRatio>
    </layout-macro>
  </content>
  <style></style>
</layout-macro-def>
